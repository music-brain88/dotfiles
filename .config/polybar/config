[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

;format-prefix = " "
format-prefix = "# "
format-prefix-foreground = ${colors.fg}
format-prefix-background = ${colors.bg}
format-prefix-underline = ${color.adapta-cyan}
